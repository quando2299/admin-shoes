<h2 class="content-block">Branch</h2>

<style>
    #gridContainer {
        vertical-align: middle !important;
        max-height: 500px;
        min-height: 350px;
        margin: 0 250px;
    }
</style>

@(Html.DevExtreme().DataGrid<AdminShoesStore.Data.Branch>()
    .DataSource(ds => ds.Mvc()
        .Controller("Branches")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .DeleteAction("Delete")
        .Key("Id")
    )
    .ID("gridContainer")
    .ColumnAutoWidth(true)
    .ColumnHidingEnabled(true)
    .RemoteOperations(true)
    .Columns(columns => {
        columns.AddFor(m => m.Name);
    })
    .Editing(e => e
        .AllowAdding(true)
        .AllowUpdating(true)
        .AllowDeleting(true)
    )
)